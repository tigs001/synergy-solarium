{
    "name": "synergy/solarium-module",
    "description": "Zend Framework 3 integration with solarium solr search client",
    "keywords": [
        "zf3",
        "solr",
        "solarium",
        "search"
    ],
    "license": "MIT",
    "type": "zf3-module",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "laminas/laminas-component-installer": "^1.0 || ^0.3 || ^1.0.0-dev@dev",
        "zendframework/zendframework": "^3",
        "laminas/laminas-mvc": "^3",
        "solarium/solarium": "~3",
        "laminas/laminas-dependency-plugin": "^1.0",
        "doctrine/instantiator": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "laminas/laminas-developer-tools": "dev-master",
        "satooshi/php-coveralls": "^2.2"
    },
    "autoload": {
        "psr-0": {
            "SynergySolarium": "src/",
            "SynergySolariumTest": "tests/"
        },
        "classmap": [
            "./tests/SynergySolariumTest/Module.php",
            "./Module.php"
        ]
    },
    "authors": [
        {
            "name": "Pele Odiase",
            "email": "peleodiase@yahoo.co.uk"
        }
    ]
}
